{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
  },
  "include": [
    "./src/**/*",
  ],
  "types": [
    "@types/jest"
  ],
  "exclude": [
    "./plugins/**/*",
    "./typings/**/*",
    "./build/**/*"
  ]
}